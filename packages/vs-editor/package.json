{
  "name": "@tts-tools/vscode-editor",
  "displayName": "Tabletop Simulator Editor",
  "author": "Sebastian Stern",
  "description": "Implementation of the external editor API for Tabletop Simulator",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "workspaceContains:**/.lua",
    "workspaceContains:**/.ttslua"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ttsTools.getObjects",
        "title": "Get Objects",
        "category": "TTS Editor"
      },
      {
        "command": "ttsTools.saveAndPlay",
        "title": "Save & Play",
        "category": "TTS Editor"
      },
      {
        "command": "ttsTools.executeCode",
        "title": "Execute Code",
        "category": "TTS Editor"
      }
    ],
    "keybindings": [
      {
        "command": "ttsTools.getObjects",
        "key": "ctrl+alt+l"
      },
      {
        "command": "ttsTools.saveAndPlay",
        "key": "ctrl+alt+s"
      },
      {
        "command": "ttsTools.executeCode",
        "key": "ctrl+shift+e",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "title": "TTS Editor",
      "properties": {
        "ttsEditor.includePath": {
          "title": "Include Directory",
          "markdownDescription": "Relative path inside the workspace directory that is used to resolve modules.",
          "type": "string",
          "default": "imports"
        },
        "ttsEditor.tstl.enable": {
          "title": "Enable TSTL",
          "markdownDescription": "When set, Typescript to Lua is run before bundling the scripts using the path below.",
          "type": "boolean",
          "default": false
        },
        "ttsEditor.tstl.path": {
          "title": "TSTL Path",
          "markdownDescription": "Relative path inside the workspace to a Typescript to Lua package that should be transpiled before bundling the scripts.",
          "type": "string",
          "default": "src"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@matanlurey/tts-editor": "github:sebaestschjin/tts-editor#dist",
    "@tts-tools/xmlbundle": "workspace:^",
    "luabundle": "^1.6.0",
    "typescript-to-lua": "^1.19.2"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "typescript": "^5.2.2"
  }
}