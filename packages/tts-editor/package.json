{
  "name": "tts-editor",
  "displayName": "Tabletop Simulator Editor",
  "author": "Sebastian Stern",
  "publisher": "sebaestschjin",
  "description": "Implementation of the external editor API for Tabletop Simulator (TTS)",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "homepage": "https://sebaestschjin.github.io/tts-tools/editor/latest",
  "repository": {
    "type": "git",
    "url": "https://github.com/Sebaestschjin/tts-tools",
    "directory": "packages/tts-editor"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:lua",
    "workspaceContains:**/*.lua",
    "workspaceContains:**/*.ttslua"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ttsEditor.getObjects",
        "title": "Get Objects",
        "category": "TTS Editor",
        "icon": "$(git-fetch)"
      },
      {
        "command": "ttsEditor.saveAndPlay",
        "title": "Save and Play",
        "category": "TTS Editor",
        "icon": "$(send)"
      },
      {
        "command": "ttsEditor.saveAndPlayBundled",
        "title": "Save and Play (Bundled)",
        "category": "TTS Editor",
        "icon": "$(send)"
      },
      {
        "command": "ttsEditor.executeCode",
        "title": "Execute Code",
        "category": "TTS Editor",
        "icon": "$(run)"
      },
      {
        "command": "ttsEditor.showOutput",
        "title": "Show Output",
        "category": "TTS Editor"
      },
      {
        "command": "ttsEditor.openBundledScript",
        "title": "Open Bundled Script",
        "category": "TTS Editor",
        "icon": "$(go-to-file)"
      },
      {
        "command": "ttsEditor.getRuntimeUi",
        "title": "Get Runtime UI",
        "category": "TTS Editor",
        "icon": "$(window)"
      },
      {
        "command": "ttsEditor.locateObject",
        "title": "Locate Object",
        "category": "TTS Editor",
        "icon": "$(location)"
      }
    ],
    "keybindings": [
      {
        "command": "ttsEditor.getObjects",
        "key": "ctrl+alt+l"
      },
      {
        "command": "ttsEditor.saveAndPlay",
        "key": "ctrl+alt+s"
      },
      {
        "command": "ttsEditor.executeCode",
        "key": "ctrl+shift+e",
        "when": "editorFocus"
      }
    ],
    "configuration": {
      "title": "TTS Editor",
      "properties": {
        "ttsEditor.includePath": {
          "title": "Include Directory",
          "markdownDescription": "Relative path inside the workspace directory that is used to resolve modules.",
          "type": "string",
          "default": "src"
        },
        "ttsEditor.tstl.enable": {
          "title": "Enable TSTL",
          "markdownDescription": "When set, Typescript to Lua is run before bundling the scripts using the path below.",
          "type": "boolean",
          "default": false
        },
        "ttsEditor.tstl.path": {
          "title": "TSTL Path",
          "markdownDescription": "Relative path inside the workspace directory to a Typescript to Lua project that should be transpiled before bundling the scripts.",
          "type": "string",
          "default": "."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "ttsObjects",
          "name": "TTS Objects"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "ttsObjects",
        "contents": "No objects have been loaded yet\n[Load objects](command:ttsEditor.getObjects)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "ttsEditor.openBundledScript",
          "when": "view == ttsObjects && viewItem == script",
          "group": "inline"
        },
        {
          "command": "ttsEditor.getRuntimeUi",
          "when": "view == ttsObjects && (viewItem == object || viewItem == global)",
          "group": "inline@2"
        },
        {
          "command": "ttsEditor.locateObject",
          "when": "view == ttsObjects && viewItem == object",
          "group": "inline@1"
        }
      ]
    }
  },
  "icon": "resource/icon.png",
  "scripts": {
    "vscode:package": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@matanlurey/tts-editor": "github:sebaestschjin/tts-editor#dist",
    "@tts-tools/xmlbundle": "^1.0.0",
    "luabundle": "^1.6.0",
    "typescript-to-lua": "^1.23.0"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.19.3",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "typescript": "^5.3.3"
  }
}
