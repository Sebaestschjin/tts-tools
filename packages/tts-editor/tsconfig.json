{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ES2020"
		],
    "types": ["node", "@typed-tabletop-simulator/declaration", "@typescript-to-lua/language-extensions"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
    "esModuleInterop": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
	}
}
