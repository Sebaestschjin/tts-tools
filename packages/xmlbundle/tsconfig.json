{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "lib": ["ESNext"],
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "types": ["node", "mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "strict": true
  }
}
