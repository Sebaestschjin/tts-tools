{
  "include": ["src"],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "out",
    "lib": ["ESNext"],
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "./",
    "esModuleInterop": true
  }
}
